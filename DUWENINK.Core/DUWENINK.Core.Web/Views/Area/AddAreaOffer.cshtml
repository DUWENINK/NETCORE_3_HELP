@using DUWENINK.Core.Models.System
@using Microsoft.AspNetCore.Mvc.Rendering
@model DUWENINK.Core.Models.System.AreaOfferDto

@{
    ViewBag.Title = "添加价格";
    Layout = "~/Views/Shared/_Layout_Content.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>编辑菜单</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            @using (Html.BeginForm("AddAreaOffer", "Area", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.AreaId)
                <div class="form-group">
                    <label class="col-sm-4 control-label">@Html.LabelFor(m => m.AreaName)：</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.AreaName, new { @class = "form-control", disabled = true })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.A1OfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.A1OfferPrice, new { @class = "form-control", data_mask = "&yen; 999,999,999.99" })
                    </div>
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.A2OfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.A2OfferPrice, new { @class = "form-control", data_mask = "&yen; 999,999,999.99" })
                    </div>
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.A3OfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.A3OfferPrice, new { @class = "form-control", data_mask = "&yen; 999,999,999.99" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.B1OfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.A2OfferPrice, new { @class = "form-control" })
                    </div>
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.B2OfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.B2OfferPrice, new { @class = "form-control" })
                    </div>
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.C1OfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.C1OfferPrice, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.C2OfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.C2OfferPrice, new { @class = "form-control" })
                    </div>
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.C3OfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.C3OfferPrice, new { @class = "form-control" })
                    </div>
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.C4OfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.C4OfferPrice, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.DOfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.DOfferPrice, new { @class = "form-control" })
                    </div>
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.EOfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.EOfferPrice, new { @class = "form-control" })
                    </div>
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.FOfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.FOfferPrice, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.MOfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.MOfferPrice, new { @class = "form-control" })
                    </div>
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.NOfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.NOfferPrice, new { @class = "form-control" })
                    </div>
                    <label class="col-sm-1 control-label">@Html.LabelFor(m => m.POfferPrice)：</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.POfferPrice, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-8">
                        <button class="btn btn-info " type="submit">保存</button>
                        <button class="btn btn-white " type="button" onclick="window.location.href='@Url.Action("Index")'">返回</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section scripts{
    <environment names="Development">
        <script src="~/js/jquery.validate.js"></script>
        <script src="~/js/jquery.validate.unobtrusive.js"></script>
        <script src="~/js/plugins/suggest/bootstrap-suggest.js"></script>
        <script src="~/js/page/menu.js"></script>
        <script src="~/js/base.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/menu.min.js" asp-append-version="true"></script>
    </environment>
    <script>
            $("#btnBack").bind("click", function(e) {
                XPage.GoTo(e.target, "@Url.Action("Index")");
            });
    </script>
}
