@using Microsoft.AspNetCore.Mvc.Rendering
@model DUWENINK.Core.Models.Business.SmtpDto
@{
    ViewBag.Title = "添加邮件客户端";
    Layout = "~/Views/Shared/_Layout_Content.cshtml";
}
<div class="wrapper wrapper-content">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>添加菜单</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            @using (Html.BeginForm("Add", "Smtp", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Host)：</label>
                    <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Host, new { @class = "form-control", placeholder = "邮件服务器" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.FromUserMail)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.FromUserMail, new { @class = "form-control", placeholder = "发件邮箱地址" })
                        @Html.ValidationMessageFor(m => m.FromUserMail)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.FromUserName)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.FromUserName, new { @class = "form-control", placeholder = "发送端昵称" })
                        @Html.ValidationMessageFor(m => m.FromUserName)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.PassWord)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.PassWord, new { @class = "form-control", placeholder = "邮件密码" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.UseDefaultCredentials)：</label>
                    <div class="col-sm-8">
                        @Html.CheckBoxFor(m => m.UseDefaultCredentials, new { @class = "form-control",aligin="left" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">@Html.LabelFor(m => m.Remark)：</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Remark, new { @class = "form-control", placeholder = "备注信息", rows=3 })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-8">
                        <button class="btn btn-info" type="submit">保存</button>
                        <button class="btn btn-white" type="button" id="btnBack">返回</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section scripts{
    <environment names="Development">
        <script src="~/js/jquery.validate.js"></script>
        <script src="~/js/jquery.validate.unobtrusive.js"></script>
        <script src="~/js/plugins/suggest/bootstrap-suggest.js"></script>
        <script src="~/js/base.js"></script>
        <script src="~/js/page/menu.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/menu.min.js" asp-append-version="true"></script>
    </environment>

    <script>
        $("#btnBack").bind("click", function(e) {
            XPage.GoTo(e.target, "@Url.Action("Index")");
        });
    </script>
}